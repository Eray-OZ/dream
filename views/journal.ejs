<%- include('partials/_header') %>



    <%- include('partials/_navbar') %>


        <div class="search-bar-container">
            <div class="search-bar">
                <input type="text" placeholder="Rüya ara...">
                <button>Ara</button>
            </div>
        </div>
        <br>
        <br>



        <div class="filter-container">
            <select id="categoryFilter">
                <option value="all">Tüm Rüyalar</option>
                <option value="macera">Gelecek</option>
                <option value="iliskiler">Geçmiş</option>
                <option value="korku">Korku</option>
                <option value="iliskiler">İlişkiler</option>
                <option value="iliskiler">Aile</option>
                <option value="iliskiler">İş</option>
                <option value="iliskiler">Diğer</option>
            </select>
        </div>



        <div class="container">

            <% journals.map(journal=> { %>
                <div class="card">

                    <h3>
                        <%= journal.title %>
                    </h3>
                    <br>
                    <p>
                        <%= journal.content.split(" ").slice(0,15).join(" ") + " ..." %>
                    </p>
                    <br>

                    <span class="badge">
                        <%= journal.category %>
                    </span>

                    <br>
                    <br>

                    <a href="/dream/analysis/<%= journal._id %>"><button>Analiz</button></a>

                    <br>
                    <br>

                    <a href="/story/<%= journal._id %>"><button>Hikaye</button></a>

                </div>

                <% }) %>
        </div>



        <%- include('partials/_footer') %>